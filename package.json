{
  "name": "amp-vending-website",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage --watchAll=false",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:all": "npm run type-check && npm run test:coverage && npm run test:e2e",
    "lighthouse": "tsx ./scripts/lighthouse-test.ts",
    "lighthouse:ci": "npm run build && npm run start & sleep 10 && npm run lighthouse && kill %1",
    "performance": "npm run lighthouse",
    "accessibility": "npm run test:e2e -- --grep @accessibility",
    "clean": "rm -rf .next node_modules/.cache coverage test-results",
    "pre-commit": "lint-staged",
    "email:test": "node -e \"require('./lib/services/emailService.js').emailService.verifyConnection().then(console.log)\""
  },
  "dependencies": {
    "@floating-ui/react-dom": "^2.1.3",
    "@heroicons/react": "^2.2.0",
    "@radix-ui/react-dropdown-menu": "^2.1.15",
    "@radix-ui/react-menu": "^2.1.15",
    "@radix-ui/react-popper": "^1.2.7",
    "@vercel/analytics": "^1.4.1",
    "@vercel/speed-insights": "^1.1.0",
    "clsx": "^2.1.1",
    "framer-motion": "^11.15.0",
    "lodash": "^4.17.21",
    "lucide-react": "^0.468.0",
    "next": "15.1.5",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "resend": "^4.0.1",
    "sonner": "^1.7.1",
    "styled-components": "^6.1.15",
    "tailwind-merge": "^2.6.0",
    "web-vitals": "^3.5.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.10.2",
    "@playwright/test": "^1.53.1",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.1.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/jest": "^29.5.14",
    "@types/lodash": "^4.17.13",
    "@types/node": "^22.10.6",
    "@types/react": "^19.0.6",
    "@types/react-dom": "^19.0.3",
    "@typescript-eslint/eslint-plugin": "^8.20.0",
    "@typescript-eslint/parser": "^8.20.0",
    "autoprefixer": "^10.4.20",
    "eslint": "^8.57.1",
    "eslint-config-next": "15.1.5",
    "jest": "^29.7.0",
    "jest-axe": "^8.0.0",
    "jest-environment-jsdom": "^29.7.0",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.17",
    "tsx": "^4.7.0",
    "typescript": "^5.7.3"
  },
  "overrides": {
    "@testing-library/react": {
      "react": "$react",
      "react-dom": "$react-dom"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}